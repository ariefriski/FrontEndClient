@model BelajarWeb1.Models.LoginResponse

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div class="container">
    <div class="card">
        <div class="card-body">
            <form asp-action="Login" asp-controller="Account">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="Email" />
                    <spanclass ="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="control-label">Password</label>
                    <input name ="Password"class="form-control" type="password" placeholder="Password" />
                    <span class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <a asp-action="Register">Register</a> | <a asp-action="ResetPassword">Lupa Password</a>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
