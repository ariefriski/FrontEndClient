<div class="block-content">
    <button type="button" class="btn btn-success mr-5 mb-5" data-toggle="modal" data-target="#insertModalDiv">
        <i class="fa fa-plus mr-5"></i>Add Data
    </button>
    <table id="table_division" class="table table-vcenter">
        <thead>
            <tr>
                <th class="d-none d-sm-table-cell">Id</th>
